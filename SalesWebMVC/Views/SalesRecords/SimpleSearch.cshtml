@model IEnumerable<SalesWebMVC.Models.SalesRecord> 

@{
    ViewData["Title"] = "Simple Search";
}

<h2>@ViewData["Title"]</h2>

<nav class="navbar navbar-expand-lg navbar-light bg-light">
    <form class="form-inline my-2 my-lg-0" role="search">
        <div class="form-group">
            <div class="form-group">
                <label class="my-2 mr-sm-2" for="minDate">Min Date</label>
                <input type="date" class="form-control my-2 mr-sm-2" name="minDate" value=@ViewData["minDate"] />
            </div>
            <div class="form-group">
                <label class="my-2 mr-sm-2" for="maxDate">Max Date</label>
                <input type="date" class="form-control my-2 mr-sm-2" name="maxDate" value=@ViewData["minDate"] />
            </div>
        </div>
        <button type="submit" class="btn btn-primary my-2 mr-sm-2">Filter</button>
    </form>
</nav>

<hr />

<div class="panel-title">
    <h3 class="panel-title">Total Sales = @Model.Sum(obj => obj.Amount).ToString("F2")</h3>
</div>

<hr />

<table class="table table-striped table-hover">
    <thead>
        <tr class="bg-success">
            <th>@Html.DisplayNameFor(model => model.Id)</th>
            <th>@Html.DisplayNameFor(model => model.Date)</th>
            <th>@Html.DisplayNameFor(model => model.Seller)</th>
            <th>@Html.DisplayNameFor(model => model.Seller.Department)</th>
            <th>@Html.DisplayNameFor(model => model.Amount)</th>
            <th>@Html.DisplayNameFor(model => model.SaleStatus)</th>
        </tr>
    </thead>
    <tbody>
        @foreach (SalesRecord item in Model)
        {
        <tr>
            <td>@Html.DisplayFor(modelItem => item.Id)</td>
            <td>@Html.DisplayFor(modelItem => item.Date)</td>
            <td>@Html.DisplayFor(modelItem => item.Seller.Name)</td>
            <td>@Html.DisplayFor(modelItem => item.Seller.Department.Name)</td>
            <td>@Html.DisplayFor(modelItem => item.Amount)</td>
            <td>@Html.DisplayFor(modelItem => item.SaleStatus)</td>
        </tr>
        }
    </tbody>
</table>